<!doctype html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
   <link rel="stylesheet" href="css/ngomain.css">
  <title>Ngo Page</title>
</head>

<body>
  <div class="container-fluid bg-light text-dark py-3">
    <header class="text-center">
      <h1>Request For Donation</h1>
    </header>
  </div>
 
<div class="container p-3">
    <div class="row  gy-3">
      {{#each donateitems}}
      <div class="col-3">
        <div class="card custom-card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">{{this.name3}}</h5>
            <p class="card-text">email: {{this.email3}}</p>
            <p class="card-text">phone : {{this.phone}}</p>
            <p class="card-text">address : {{this.address}}</p>
            <p class="card-text">donationtype : {{this.donationtype}}</p>
            <p class="card-text">quantity : {{this.quantity}}</p>
            {{!-- <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a> --}}
            <form method="post" action="/ngopage/{{this.id}}?_method=DELETE">
            <div class="col-12 pb-2">
            <button type="submit" class="btn btn-primary">Accept</button>
            </div>
            </form>
            <h6 class="card-subtitle mb-2 text-muted">{{ this.donated_at}}</h6>
            {{!-- <h6 class="card-subtitle mb-2 text-muted">{{ this.donated_at}}</h6> --}}
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{!-- <div class="container-fluid bg-light text-dark py-3">
    <header class="text-center">
      <h1>Request For Donation</h1>
    </header>
  </div> --}}
</body>
